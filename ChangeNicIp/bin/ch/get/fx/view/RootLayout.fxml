<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane minHeight="400.0" minWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.get.fx.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="파일">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onClickedAdd" text="추가" />
                  <MenuItem mnemonicParsing="false" onAction="#onClickedExit" text="닫기" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="수정">
            <items>
              <MenuItem mnemonicParsing="false" text="항목 삭제" />
                  <MenuItem mnemonicParsing="false" onAction="#searchNicInfo" text="랜카드 검색">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="G" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            </items>	
          </Menu>
          <Menu mnemonicParsing="false" text="도움말">
            <items>
              <MenuItem mnemonicParsing="false" text="개발자" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TableView fx:id="nicTable" editable="true" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nicKind" prefWidth="75.0" text="용도" />
          <TableColumn fx:id="nicName" prefWidth="75.0" text="랜카드 이름" />
          <TableColumn fx:id="nicIp" prefWidth="75.0" text="논리 주소" />
          <TableColumn fx:id="nicMask" prefWidth="75.0" text="서브넷 마스크" />
          <TableColumn fx:id="nicGate" prefWidth="75.0" text="게이트웨이" />
          <TableColumn fx:id="nicDns01" prefWidth="75.0" text="주 DNS" />
          <TableColumn fx:id="nicDns02" prefWidth="75.0" text="보조 DNS" />
          <TableColumn fx:id="nicInfo" prefWidth="75.0" text="설명" />
          <TableColumn fx:id="selNic" prefWidth="75.0" text="적용" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
